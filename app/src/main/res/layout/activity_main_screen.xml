<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="connect.dbase.rock.dbasem.MainScreenActivity"
    android:background="@color/backcolor">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/header_image"
        android:scaleType="fitXY" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView2"
        android:layout_below="@+id/imageView"
        android:src="@drawable/beautyback"
        android:scaleType="fitXY"
        android:alpha="0.3" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:gravity="center">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gridLayout"
            android:rowCount="19"
            android:columnCount="6"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile"
                android:id="@+id/textView4"
                android:layout_row="0"
                android:layout_column="0"
                style="@style/MyText_left"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_search_mobile"
                android:layout_row="0"
                android:layout_column="1"
                style="@style/MyEdit"
                android:layout_columnSpan="2"
                android:inputType="phone"
                android:hint="enter mobile number"
                android:layout_marginTop="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Search"
                android:id="@+id/bt_search"
                android:layout_row="0"
                android:layout_column="3"
                android:background="@android:color/transparent"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25sp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="setting"
                android:id="@+id/bt_setting"
                android:layout_row="0"
                android:layout_column="4"
                android:background="@android:color/transparent"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LastName"
                android:id="@+id/textView5"
                android:layout_row="1"
                android:layout_column="0"
                style="@style/MyText_left" />

            <EditText
                style="@style/MyEdit"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_search_lastname"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnSpan="2"
                android:hint="last name"
                android:capitalize="words" />

            <Spinner
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:id="@+id/spin_search_result"
                android:layout_row="1"
                android:layout_column="3"
                android:layout_columnSpan="2"
                android:background="@color/textcolor"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:id="@+id/textView6"
                android:layout_row="2"
                android:layout_column="0"
                style="@style/MyText_left" />

            <Spinner
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:id="@+id/spin_title"
                android:layout_row="2"
                android:layout_column="1"
                style="@style/MyEdit"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:id="@+id/textView22"
                android:layout_row="2"
                android:layout_column="2"
                android:textColor="@color/textcolor"
                android:layout_marginLeft="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FirstName"
                android:id="@+id/textView8"
                android:layout_row="3"
                android:layout_column="0"
                style="@style/MyText_left" />

            <EditText
                style="@style/MyEdit"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_first_name"
                android:layout_row="3"
                android:layout_column="1"
                android:capitalize="words" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:id="@+id/textView23"
                android:layout_row="3"
                android:layout_column="2"
                android:textColor="@color/textcolor"
                android:layout_marginLeft="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LastName"
                android:id="@+id/textView7"
                android:layout_row="4"
                android:layout_column="0"
                style="@style/MyText_left" />

            <EditText
                style="@style/MyEdit"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_last_name"
                android:layout_row="4"
                android:layout_column="1"
                android:capitalize="words" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:id="@+id/textView24"
                android:layout_row="4"
                android:layout_column="2"
                android:textColor="@color/textcolor"
                android:layout_marginLeft="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:id="@+id/textView9"
                android:layout_row="5"
                android:layout_column="0"
                style="@style/MyText_left" />

            <EditText
                style="@style/MyEdit"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_address_1"
                android:layout_row="5"
                android:layout_column="1"
                android:layout_columnSpan="3"
                android:capitalize="words" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:id="@+id/textView25"
                android:layout_row="5"
                android:layout_column="4"
                android:textColor="@color/textcolor"
                android:layout_marginLeft="3dp" />

            <EditText
                style="@style/MyEdit"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_address_2"
                android:layout_row="6"
                android:layout_column="1"
                android:layout_columnSpan="3"
                android:capitalize="words" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suburb"
                android:id="@+id/textView10"
                android:layout_row="7"
                android:layout_column="0"
                style="@style/MyText_left" />

            <EditText
                style="@style/MyEdit"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_suburb"
                android:layout_row="7"
                android:layout_column="1"
                android:capitalize="words" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:id="@+id/textView26"
                android:layout_row="7"
                android:layout_column="2"
                android:textColor="@color/textcolor"
                android:layout_marginLeft="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State"
                android:id="@+id/textView11"
                android:layout_row="8"
                android:layout_column="0"
                style="@style/MyText_left" />

            <Spinner
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:id="@+id/spin_state"
                android:layout_row="8"
                android:layout_column="1"
                android:background="@color/textcolor"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PostCode"
                android:id="@+id/textView19"
                android:layout_row="8"
                android:layout_column="2"
                style="@style/MyText_left"
                android:layout_gravity="right"
                android:textAlignment="gravity" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_postcode"
                android:layout_row="8"
                android:layout_column="3"
                style="@style/MyEdit"
                android:inputType="textPostalAddress" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:id="@+id/textView27"
                android:layout_row="8"
                android:layout_column="4"
                android:textColor="@color/textcolor"
                android:layout_marginLeft="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:id="@+id/textView12"
                android:layout_row="9"
                android:layout_column="0"
                style="@style/MyText_left" />

            <EditText
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress|textWebEmailAddress"
                android:ems="10"
                android:id="@+id/txt_email"
                android:layout_row="9"
                android:layout_column="1"
                android:layout_columnSpan="2"
                style="@style/MyEdit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:id="@+id/textView13"
                android:layout_row="10"
                android:layout_column="0"
                style="@style/MyText_left" />

            <EditText
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_phone"
                android:layout_row="10"
                android:layout_column="1"
                style="@style/MyEdit"
                android:inputType="phone" />

            <TextView
                android:layout_width="63dp"
                android:layout_height="wrap_content"
                android:text="Work"
                android:id="@+id/textView20"
                android:layout_row="10"
                android:layout_column="2"
                style="@style/MyText_left"
                android:layout_gravity="right"
                android:textAlignment="gravity" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_work"
                android:layout_row="10"
                android:layout_column="3"
                style="@style/MyEdit"
                android:inputType="phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile"
                android:id="@+id/textView14"
                android:layout_row="11"
                android:layout_column="0"
                style="@style/MyText_left" />

            <EditText
                style="@style/MyEdit"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_mobile"
                android:layout_row="11"
                android:layout_column="1"
                android:layout_columnSpan="2"
                android:inputType="phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:id="@+id/textView28"
                android:layout_row="11"
                android:layout_column="3"
                android:textColor="@color/textcolor"
                android:layout_marginLeft="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:id="@+id/textView15"
                android:layout_row="12"
                android:layout_column="0"
                style="@style/MyText_left" />

            <Spinner
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:id="@+id/spin_gender"
                android:layout_row="12"
                android:layout_column="1"
                android:background="@color/textcolor"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Birthday"
                android:id="@+id/textView16"
                android:layout_row="13"
                android:layout_column="0"
                style="@style/MyText_left" />

            <EditText
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:inputType="date|datetime"
                android:ems="10"
                android:id="@+id/txt_birth_day"
                android:layout_row="13"
                android:layout_column="1"
                style="@style/MyEdit"
                android:layout_columnSpan="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refered By"
                android:id="@+id/textView17"
                android:layout_row="14"
                android:layout_column="0"
                style="@style/MyText_left" />

            <EditText
                style="@style/MyEdit"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_refer"
                android:layout_row="14"
                android:layout_column="1"
                android:layout_columnSpan="2"
                android:capitalize="words" />

            <TextView
                android:layout_width="460dp"
                android:layout_height="wrap_content"
                android:text="Please Tick if you do NOT wish to be contacted by"
                android:id="@+id/textView18"
                android:layout_row="15"
                android:layout_column="0"
                style="@style/MyText_left"
                android:layout_columnSpan="5" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SMS Appointment reminders"
                android:id="@+id/chk_sms_appoint"
                android:layout_row="16"
                android:layout_column="0"
                android:textColor="@color/textcolor"
                android:buttonTint="@color/textcolor"
                android:layout_columnSpan="2"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SMS Marketing"
                android:id="@+id/chk_sms_marketing"
                android:textColor="@color/textcolor"
                android:buttonTint="@color/textcolor"
                android:layout_row="16"
                android:checked="false"
                android:layout_column="2" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mail"
                android:id="@+id/chk_mail"
                android:textColor="@color/textcolor"
                android:buttonTint="@color/textcolor"
                android:layout_row="16"
                android:checked="false"
                android:layout_column="3" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="clear"
                android:id="@+id/bt_clear"
                android:layout_row="17"
                android:layout_column="1"
                android:background="@android:color/transparent"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="submitdetail"
                android:id="@+id/bt_submit"
                android:layout_row="17"
                android:layout_column="2"
                android:background="@android:color/transparent"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="23sp" />
        </GridLayout>
    </LinearLayout>

</RelativeLayout>
